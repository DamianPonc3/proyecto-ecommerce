html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"  integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
        style
            include ../public/css/style.css
        title='PUG'

    body
    h2(class="tituloCentrado separacion") Ingrese Producto
    div(class="container-fluid Centrado")
        div(class="row")
            div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12")
                form(action="" method="post" class="" id="productForm")
                    div(class="form-floating mb-3")
                        input(type="text" class="form-control" id="title" placeholder="Nombre" name="title" required)
                        label(for="title") Nombre
                    div(class="form-floating mb-3")
                        input(type="number" class="form-control" id="price" placeholder="Precio" name="price" required)
                        label(for="precio") Precio
                    div(class="form-floating mb-3")
                        input(class="btn btn-success" type="submit" value="Enviar")
    h2(class="tituloCentrado separacion") Vista de productos
    div(class="container-fluid Centrado")
        div(class="row")
            div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12")
                    table
                        thead
                            tr
                                th(scope="col") ID
                                th(scope='col') Name
                                th(scope='col') Price
                        tbody(id="tableContent")
                            each product in products
                                tr  
                                    td= product.id
                                    td= product.title
                                    td= product.price

    h2(class="tituloCentrado separacion") Centro de Mensajes
    div(class="container-fluid Centrado")
        div(class="row")
            div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12")
                form(action="" method="" class="" id="chatForm")
                    div(class="form-floating mb-3")  
                        input(type="email" class="form-control" id="email" placeholder="Email" name="email" required)
                        label(for="foto") Email
                    div(class="form-floating mb-3" id="chat")
                    div(class="row")
                        div(class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 col-xxl-6")
                            div(class="form-floating mb-3")  
                                input(type="text" class="form-control" id="message" placeholder="Mensaje" name="menssage" required)
                                label(for="mesage" id="message") Mensaje
                        div(class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 col-xxl-6")
                            div(class="form-floating mb-3")
                                input(class="btn btn-info" type="submit" value="Enviar")

        script(src="/socket.io/socket.io.js")
        script(src="/js/main.js")