html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"  integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
        style
            include ../public/css/style.css
        title='PUG'

    body
        div(class="container mx-auto container-form")
            h1 Enter product

            form(class="bg-light p-3 mb-3 form" style="width: 600px;" action="/productos" method="POST")
                div(class="form-group row ")
                    label(for="title" class="col-md-4 col-form-label") Product:
                    div(class="col-md-8 p-1 ")
                        input(type="text" id="title" name="title")

                div(class="form-group row")
                    label(for="price" class="col-md-4 col-form-label") Price:
                    div(class="col-md-8 p-1")
                        input(type="number" id="price" name="price")

                div(class="form-group row mt-2 ")
                    div(class="col-md-10 ")
                        input(value="Load Product" class="btn btn-primary" type="submit")


            form(class="p-3" action="/productos" method="get")
                button(class="btn btn-dark") See Products